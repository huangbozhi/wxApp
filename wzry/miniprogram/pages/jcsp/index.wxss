page, .container{
    width: 100%;
    height: 350rpx;
}
.container swiper{
    width: 100%;
    height: 100%;
}
.slide-image{
    width: 100%;
}
.slide-image image{
    width: 640rpx;
    height: 350rpx;
    background-size: cover;
}
.container .top-video{
    width: 100%;
    position: relative;
}
.top-video .title{
    position: relative;
    top: 20rpx;
    left: 5rpx;
    font-size: 40rpx;
}
.cards{
    width: 100%;
    height: 257rpx;
    overflow-x: scroll;
    white-space: nowrap;
    box-sizing: border-box;
    padding-left: 20rpx;
    position: relative;
    top: 40rpx;
}
.cards .card{
    /* display: flex; */
    display: inline-block;
    margin-right: 30rpx;
    padding-left: 20rpx;
    width: 300rpx;
    height: 100%;
}
.cards .card:first-child{
    position: relative;
    left: 0;
    margin-left: -30rpx;
}
.cards .card image,video{
    width: 100%;
    height: 100px;
}
.cards .card image .label{
    position: absolute;
    font-size: 24rpx;
    top: 0rpx;
    color: #eeeeee;
}
.all-video .title{
    position: relative;
    top: 40rpx;
    left: -290rpx;
    font-size: 40rpx;
}