page, .container{
    width: 100%;
    height: 350rpx;
}
.container swiper{
    width: 100%;
    height: 100%;
}
.slide-image{
    width: 100%;
}
.slide-image image{
    width: 640rpx;
    height: 350rpx;
    background-size: cover;
}
.container .top-video{
    width: 100%;
    position: relative;
}
.top-video .title{
    position: relative;
    top: 20rpx;
    left: 5rpx;
    font-size: 40rpx;
}
.cards{
    width: 100%;
    height: 257rpx;
    overflow-x: scroll;
    white-space: nowrap;
    box-sizing: border-box;
    padding-left: 20rpx;
    position: relative;
    top: 40rpx;
}
.cards .card{
    /* display: flex; */
    display: inline-block;
    margin-right: 30rpx;
    padding-left: 20rpx;
    width: 300rpx;
    height: 100%;
}
.cards .card:first-child{
    position: relative;
    left: 0;
    margin-left: -30rpx;
}
.cards .card image,video{
    width: 100%;
    height: 100px;
}
.cards .card image .label{
    width: 100%;
    position: absolute;
    font-size: 24rpx;
    top: 0rpx;
    color: #eeeeee;
    white-space: normal;
}
.all-video{
    width: 100%;
}
.all-video .title{
    position: relative;
    top: 40rpx;
    font-size: 40rpx;
}
.all-video .tab-wrapper{
    width: 100%;
    background: #F6F6F6;
    border-top: 1rpx solid #F6F6F6;
    border-bottom: 1rpx solid #F6F6F6;
    display: flex;
    top: 100rpx;
    position: relative;
    top: 40rpx;
}
.tab-item{
    display: inline-block;
    flex: 1;
    font-size: 32rpx;
    text-align: center;
    background: #fff;
    color: rgb(12, 11, 11);
    padding: 12rpx 0;
}
.tab-item-active{
    border-bottom: 1px solid #000;
    color: red;
}
.tab-content{
    display: block;
    width: 98%;
    position: relative;
    top: 50rpx;
}
.tab-content .box{
    display: inline-block;
    width: 48%;
    padding: 0;
    margin-left: 2%;
}
.tab-content .box:first{
    margin-left: 0;
}
.tab-content .box image,video{
    width: 147px;
    height: 104px;
}


.show{
    display: block;
}
.hide{
    display: none;
}
